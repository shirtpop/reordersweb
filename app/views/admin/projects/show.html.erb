<div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm">
  <!-- Header Section -->
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center space-x-4">
      <!-- Back Button -->
      <%= link_to admin_projects_path, 
          class: "inline-flex items-center px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Projects
      <% end %>

      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white"><%= @project.name %></h1>
        <div class="flex items-center mt-2 space-x-4">
          <!-- Status Badge -->
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_badge_class(@project.status) %>">
            <svg class="w-2 h-2 mr-1.5" fill="currentColor" viewBox="0 0 8 8">
              <circle cx="4" cy="4" r="3"/>
            </svg>
            <%= @project.status.humanize %>
          </span>
          
          <!-- Created Date -->
          <span class="text-sm text-gray-500 dark:text-gray-400">
            Created <%= @project.created_at.strftime("%B %d, %Y") %>
          </span>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center space-x-3">
      <%= link_to edit_admin_project_path(@project), 
          class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-600" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit Project
      <% end %>

      <%= link_to admin_project_path(@project), method: :delete,
          confirm: "Are you sure you want to delete this project? This action cannot be undone.",
          class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-red-600 border border-transparent rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete Project
      <% end %>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Left Column - Main Information -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Client Information -->
      <% if @project.client.present? %>
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            Client Information
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Company Name</label>
              <p class="text-lg text-gray-900 dark:text-white"><%= @project.client.company_name %></p>
            </div>
            
            <% if @project.client.personal_name.present? %>
              <div>
                <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Contact Person</label>
                <p class="text-lg text-gray-900 dark:text-white"><%= @project.client.personal_name %></p>
              </div>
            <% end %>
            
            <% if @project.client.users.any? %>
              <div>
                <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Emails</label>
                <ul class="space-y-1">
                  <% @project.client.users.each do |user| %>
                    <% if user.email.present? %>
                      <li class="text-lg text-gray-900 dark:text-white">
                        <%= mail_to user.email, user.email,
                          class: "text-blue-600 dark:text-blue-400 hover:underline" %>
                      </li>
                    <% end %>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <% if @project.client.phone_number.present? %>
              <div>
                <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Phone</label>
                <p class="text-lg text-gray-900 dark:text-white">
                  <%= link_to @project.client.phone_number, "tel:#{@project.client.phone_number}", 
                      class: "text-blue-600 dark:text-blue-400 hover:underline" %>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Project Description -->
      <% if @project.description.present? %>
        <div>
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Project Description
          </h2>
          <div class="prose prose-gray dark:prose-invert max-w-none bg-white dark:bg-gray-700 rounded-lg p-6 border border-gray-200 dark:border-gray-600">
            <%= @project.description %>
          </div>
        </div>
      <% end %>

      <!-- Products Section -->
      <div>
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
            </svg>
            Products
            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
              <%= @project.products.count %>
            </span>
          </h2>
        </div>

        <% if @project.products.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% @project.products.each do |product| %>
              <div class="bg-white dark:bg-gray-700 rounded-lg p-6 border border-gray-200 dark:border-gray-600 hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
                      <%= product.name %>
                    </h3>
                    
                    <% if product.color_names.present? %>
                      <div class="mb-3">
                        <span class="text-sm text-gray-500 dark:text-gray-400">Available Colors:</span>
                        <p class="text-sm text-gray-700 dark:text-gray-300 mt-1"><%= product.color_names %></p>
                      </div>
                    <% end %>

                    <% if product.minimum_order.present? %>
                      <div class="flex items-center text-sm text-gray-600 dark:text-gray-400">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
                        </svg>
                        Min. Order: <%= product.minimum_order %>
                      </div>
                    <% end %>
                  </div>

                  <%= link_to admin_product_path(product), 
                      class: "ml-4 text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No products assigned</h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
              <%= link_to "Add products to this project", edit_admin_project_path(@project), 
                  class: "text-blue-600 dark:text-blue-400 hover:underline" %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Right Column - Project Details -->
    <div class="space-y-6">
      <!-- Project Stats -->
      <div class="bg-white dark:bg-gray-700 rounded-lg p-6 border border-gray-200 dark:border-gray-600">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Project Details</h3>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Status</label>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_badge_class(@project.status) %>">
              <svg class="w-2 h-2 mr-1.5" fill="currentColor" viewBox="0 0 8 8">
                <circle cx="4" cy="4" r="3"/>
              </svg>
              <%= @project.status.humanize %>
            </span>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Products Count</label>
            <p class="text-sm text-gray-900 dark:text-white"><%= @project.products.count %> products</p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Created</label>
            <p class="text-sm text-gray-900 dark:text-white">
              <%= @project.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Last Updated</label>
            <p class="text-sm text-gray-900 dark:text-white">
              <%= @project.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
            </p>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white dark:bg-gray-700 rounded-lg p-6 border border-gray-200 dark:border-gray-600">
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Quick Actions</h3>
        
        <div class="space-y-3">
          <%= link_to edit_admin_project_path(@project), 
              class: "flex items-center w-full px-3 py-2 text-sm font-medium text-gray-700 bg-gray-50 rounded-lg hover:bg-gray-100 dark:bg-gray-600 dark:text-gray-300 dark:hover:bg-gray-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Project
          <% end %>

          <%= link_to admin_projects_path, 
              class: "flex items-center w-full px-3 py-2 text-sm font-medium text-gray-700 bg-gray-50 rounded-lg hover:bg-gray-100 dark:bg-gray-600 dark:text-gray-300 dark:hover:bg-gray-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
            </svg>
            View All Projects
          <% end %>

          <% if @project.client.present? %>
            <%= link_to admin_client_path(@project.client), 
                class: "flex items-center w-full px-3 py-2 text-sm font-medium text-gray-700 bg-gray-50 rounded-lg hover:bg-gray-100 dark:bg-gray-600 dark:text-gray-300 dark:hover:bg-gray-500" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              View Client Details
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>