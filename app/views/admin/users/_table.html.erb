<%= turbo_frame_tag "users_list" do %>
  <div class="px-4 sm:px-6 lg:px-8">
    <div id="users_table" class="relative overflow-x-auto shadow-md sm:rounded-lg">
      <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="px-6 py-3">Email</th>
            <th scope="col" class="px-6 py-3">Role</th>
            <th scope="col" class="px-6 py-3">Client</th>
            <th scope="col" class="px-6 py-3">Created</th>
            <th scope="col" class="px-6 py-3">
              <span class="sr-only">Actions</span>
            </th>
          </tr>
        </thead>
        <tbody>
          <% if users.any? %>
            <% users.each do |user| %>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  <%= user.email %>
                </th>
                <td class="px-6 py-4">
                  <span class="<%= user.role_admin? ? 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' : 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300' %> text-xs font-medium me-2 px-2.5 py-0.5 rounded">
                    <%= user.role.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <% if user.client.present? %>
                    <%= user.client.company_name %>
                  <% else %>
                    <span class="text-gray-400 dark:text-gray-500">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4">
                  <%= user.created_at.strftime("%b %d, %Y") %>
                </td>
                <td class="px-6 py-4 text-right">
                  <div class="flex items-center space-x-2">
                    <button data-action="click->user-modal#openViewModal"
                            data-user-id="<%= user.id %>"
                            data-user-email="<%= user.email %>"
                            data-user-role="<%= user.role %>"
                            data-user-client="<%= user.client&.company_name || '' %>"
                            data-user-created="<%= user.created_at.strftime('%B %d, %Y at %I:%M %p') %>"
                            class="font-medium text-blue-600 dark:text-blue-500 hover:underline cursor-pointer">
                      View
                    </button>
                    <button data-action="click->user-modal#openEditModal"
                            data-user-id="<%= user.id %>"
                            data-user-email="<%= user.email %>"
                            class="font-medium text-yellow-600 dark:text-yellow-500 hover:underline cursor-pointer">
                      Edit
                    </button>
                    <%= link_to admin_user_path(user), 
                                data: { 
                                  "turbo-method": :delete,
                                  "turbo-confirm": "Are you sure you want to delete this user?"
                                },
                                class: "font-medium text-red-600 dark:text-red-500 hover:underline" do %>
                      Delete
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
                <div class="flex flex-col items-center justify-center">
                  <svg class="w-12 h-12 mb-4 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5 0a6 6 0 00-9-5.197"></path>
                  </svg>
                  <p class="text-lg font-medium">No users found</p>
                  <p class="text-sm">Get started by creating your first user.</p>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagy Pagination -->
    <% if @pagy && @pagy.pages > 1 %>
      <div class="border-t border-gray-200 dark:border-gray-700">
        <%= pagy_tailwind_nav(@pagy, link_extra: 'data-turbo-frame="products_list"').html_safe %>
      </div>
    <% end %>
  </div>
<% end %>