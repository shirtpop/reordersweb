<div id="user-modal" 
      tabindex="-1" 
      aria-hidden="true" 
      data-user-modal-target="modal"
      class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative p-4 w-full max-w-2xl max-h-full">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <!-- Modal header -->
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
        <h3 data-user-modal-target="modalTitle" class="text-xl font-semibold text-gray-900 dark:text-white">
          Add New User
        </h3>
        <button type="button" 
                class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" 
                data-modal-hide="user-modal"
                data-action="click->user-modal#closeModal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      
      <!-- Modal body -->
      <div class="p-4 md:p-5">
        <!-- Error Messages -->
        <div data-user-modal-target="errorContainer" class="hidden mb-4">
          <div class="flex items-center p-4 text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
            </svg>
            <div class="ms-3 text-sm font-medium">
              <ul data-user-modal-target="errorList" class="list-disc list-inside">
                <!-- Error messages will be populated here -->
              </ul>
            </div>
          </div>
        </div>

        <!-- View Mode Content -->
        <div data-user-modal-target="viewContent" class="hidden space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white">Email</label>
              <p data-user-modal-target="viewEmail" class="text-sm text-gray-600 dark:text-gray-300 bg-gray-50 dark:bg-gray-600 p-2.5 rounded-lg"></p>
            </div>
            <div>
              <label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white">Role</label>
              <p data-user-modal-target="viewRole" class="text-sm text-gray-600 dark:text-gray-300"></p>
            </div>
            <div data-user-modal-target="viewClientContainer" class="hidden">
              <label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white">Client</label>
              <p data-user-modal-target="viewClient" class="text-sm text-gray-600 dark:text-gray-300 bg-gray-50 dark:bg-gray-600 p-2.5 rounded-lg"></p>
            </div>
            <div>
              <label class="block mb-1 text-sm font-medium text-gray-900 dark:text-white">Created</label>
              <p data-user-modal-target="viewCreated" class="text-sm text-gray-600 dark:text-gray-300 bg-gray-50 dark:bg-gray-600 p-2.5 rounded-lg"></p>
            </div>
          </div>
        </div>

        <!-- Form Mode Content -->
        <div data-user-modal-target="formContent">
          <%= form_with model: [:admin, User.new], 
                        data: { 
                          user_modal_target: "form",
                          action: "turbo:submit-start->user-modal#handleFormSubmissionStart turbo:submit-end->user-modal#handleFormSubmission"
                        },
                        class: "space-y-4" do |form| %>
            
            <!-- Email Field -->
            <div>
              <%= form.label :email, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.email_field :email, 
                    required: true,
                    data: { user_modal_target: "emailField" },
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
                    placeholder: "user@example.com" %>
            </div>

            <!-- Password Fields (hidden in edit mode) -->
            <div data-user-modal-target="passwordFields">
              <div>
                <%= form.label :password, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                <%= form.password_field :password, 
                      data: { user_modal_target: "passwordField" },
                      class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
                      placeholder: "••••••••" %>
                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Leave blank to keep current password (edit mode)</p>
              </div>

              <div>
                <%= form.label :password_confirmation, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                <%= form.password_field :password_confirmation, 
                      data: { user_modal_target: "passwordConfirmationField" },
                      class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
                      placeholder: "••••••••" %>
              </div>
            </div>

            <!-- Role Field -->
            <div>
              <%= form.label :role, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.select :role, 
                    options_for_select([
                      ['Admin', 'admin'],
                      ['Client', 'client']
                    ]),
                    { prompt: 'Select a role' },
                    { 
                      required: true,
                      data: { 
                        action: "change->user-modal#toggleClientField change->client-autocomplete#toggleField",
                        user_modal_target: "roleSelect"
                      },
                      class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                    } %>
            </div>

            <!-- Client Field (conditional) -->
            <div data-user-modal-target="clientField" 
                  data-client-autocomplete-target="container"
                  class="hidden">
              <%= form.label :client_id, "Client", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <div class="relative">
                <%= form.text_field :client_search, 
                      placeholder: "Search for client...",
                      data: { 
                        client_autocomplete_target: "input",
                        user_modal_target: "clientSearchField",
                        action: "input->client-autocomplete#search focus->client-autocomplete#showResults blur->client-autocomplete#hideResults"
                      },
                      class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
                
                <%= form.hidden_field :client_id, data: { 
                      client_autocomplete_target: "hiddenField",
                      user_modal_target: "clientIdField"
                    } %>
                
                <!-- Autocomplete Results -->
                <div data-client-autocomplete-target="results" 
                      class="absolute z-50 w-full mt-1 bg-white rounded-lg shadow-lg border border-gray-200 dark:bg-gray-700 dark:border-gray-600 hidden">
                  <div data-client-autocomplete-target="resultsList" 
                        class="max-h-60 overflow-y-auto">
                    <!-- Results will be populated here -->
                  </div>
                </div>
              </div>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                Search and select a client to associate with this user.
              </p>
            </div>

            <!-- Modal footer -->
            <div data-user-modal-target="formFooter" class="flex items-center pt-4 md:pt-5 border-t border-gray-200 rounded-b dark:border-gray-600">
              <%= form.submit "Create User", 
                    data: { user_modal_target: "submitButton" },
                    class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 disabled:opacity-50 disabled:cursor-not-allowed" %>
              <button data-modal-hide="user-modal" 
                      data-action="click->user-modal#closeModal"
                      type="button" 
                      class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
                Cancel
              </button>
            </div>
          <% end %>
        </div>

        <!-- View Mode Footer -->
        <div data-user-modal-target="viewFooter" class="hidden flex items-center pt-4 md:pt-5 border-t border-gray-200 rounded-b dark:border-gray-600">
          <button data-action="click->user-modal#switchToEdit"
                  data-user-modal-target="editButton"
                  type="button" 
                  class="text-white bg-yellow-600 hover:bg-yellow-700 focus:ring-4 focus:outline-none focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-yellow-600 dark:hover:bg-yellow-700 dark:focus:ring-yellow-800">
            Edit User
          </button>
          <button data-modal-hide="user-modal" 
                  data-action="click->user-modal#closeModal"
                  type="button" 
                  class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>