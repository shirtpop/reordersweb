<div class="space-y-6">
  <!-- Page Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Projects</h1>
        <p class="mt-2 text-gray-600">Manage your t-shirt design projects</p>
      </div>
      <div>
        <span class="bg-pink-100 text-pink-800 text-sm font-medium px-3 py-1 rounded-full">
          <%= pluralize(@projects.count, 'project') %>
        </span>
      </div>
    </div>
  </div>

  <!-- Projects Grid -->
  <% if @projects.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @projects.each do |project| %>
        <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow hover:shadow-lg transition-shadow duration-300">
          <!-- Card Header -->
          <div class="p-6 pb-4">
            <div class="flex items-start justify-between mb-4">
              <h5 class="text-xl font-bold tracking-tight text-gray-900 line-clamp-2">
                <%= project.name %>
              </h5>
              <div class="flex-shrink-0 ml-2">
                <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
                  <%= pluralize(project.products.count, 'product') %>
                </span>
              </div>
            </div>
            
            <!-- Description -->
            <div class="text-gray-700 text-sm mb-4 line-clamp-3">
              <% if project.description.present? %>
                <%= truncate(strip_tags(project.description.to_s), length: 120) %>
              <% else %>
                <span class="text-gray-400 italic">No description available</span>
              <% end %>
            </div>
          </div>
          
          <!-- Card Footer -->
          <div class="px-6 pb-6">
            <!-- Products Count Badge -->
            <div class="flex items-center mb-4">
              <svg class="w-4 h-4 text-pink-600 mr-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.5 8H4m0-2v13a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1h-5.032a1 1 0 0 1-.768-.36l-1.9-2.28a1 1 0 0 0-.768-.36H5a1 1 0 0 0-1 1Z"/>
              </svg>
              <span class="text-sm font-medium text-gray-900">
                <%= project.products.count %> 
                <%= project.products.count == 1 ? 'Product' : 'Products' %>
              </span>
            </div>
            
            <!-- CTA Button -->
            <%= link_to project_path(project), 
                        class: "inline-flex items-center w-full justify-center px-4 py-2 text-sm font-medium text-center text-white bg-pink-700 rounded-lg hover:bg-pink-800 focus:ring-4 focus:outline-none focus:ring-pink-300 transition-colors duration-200" do %>
              View Details
              <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="text-center py-12 px-6">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No projects available</h3>
        <p class="text-gray-500">Your projects will appear here when they are assigned to you.</p>
      </div>
    </div>
  <% end %>
</div>

<!-- Custom CSS for line clamping -->
<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>