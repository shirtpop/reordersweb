<!-- app/views/orders/show.html.erb -->
<div class="container mx-auto px-4 py-8" data-controller="order-show">
  <!-- Header Section -->
  <div class="mb-8">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
      <div class="mb-4 lg:mb-0">
        <nav class="flex mb-4" aria-label="Breadcrumb">
          <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
              <%= link_to orders_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-pink-600" do %>
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                </svg>
                Orders
              <% end %>
            </li>
            <li>
              <div class="flex items-center">
                <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">
                  Order #<%= @order.id.to_s.rjust(6, '0') %>
                </span>
              </div>
            </li>
          </ol>
        </nav>
        
        <h1 class="text-3xl font-bold text-gray-900 mb-2">
          Order #<%= @order.id.to_s.rjust(6, '0') %>
        </h1>
        <div class="flex items-center space-x-4 text-sm text-gray-600">
          <span>Created <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Project Information -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Project Information</h2>
        <% if @order.project %>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Project Name</label>
              <p class="text-sm text-gray-900"><%= @order.project.name %></p>
            </div>
            <% if @order.project.description.present? %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                <p class="text-sm text-gray-600"><%= @order.project.description %></p>
              </div>
            <% end %>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Project Link</label>
              <%= link_to project_path(@order.project), 
                  class: "text-sm text-pink-600 hover:text-pink-800 font-medium" do %>
                View Project Details →
              <% end %>
            </div>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">No project associated with this order.</p>
        <% end %>
      </div>

      <!-- Order Items -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-xl font-semibold text-gray-900">Order Items</h2>
          <div class="text-sm text-gray-600">
            <%= pluralize(@order.total_quantity || 0, 'item') %> • 
            <%= pluralize(@order.order_items.group_by(&:product_id).count, 'product') %>
          </div>
        </div>

        <div class="space-y-6">
          <% @order.order_items.group_by(&:product_id).each do |_, item_group| %>
            <div class="border border-gray-200 rounded-lg p-4">
              <!-- Product Header -->
              <div class="flex items-start space-x-4 mb-4">
                <% if item_group.first.product&.drive_files.any? %>
                  <div class="flex-shrink-0">
                    <%= image_tag item_group.first.product.drive_files.first.preview_url, alt: item_group.first.product.name, class: "w-16 h-16 object-cover rounded-lg", referrerpolicy: "no-referrer" %>
                  </div>
                <% end %>
                
                <div class="flex-grow">
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">
                    <%= item_group.first.product&.name || "Unknown Product" %>
                  </h3>
                  <% if item_group.first.product&.description.present? %>
                    <p class="text-sm text-gray-600 mb-2"><%= item_group.first.product.description %></p>
                  <% end %>
                  
                  <div class="flex items-center space-x-4 text-sm text-gray-500">
                    <span>Product ID: #<%= item_group.first.product&.id || 'N/A' %></span>
                    <span>Total Quantity: <%= item_group.sum(&:quantity) %></span>
                  </div>
                </div>
              </div>

              <!-- Items by Color & Size -->
              <div class="space-y-3">
                <% item_group.group_by(&:color).each do |_, color_items| %>
                  <div class="bg-gray-50 rounded-lg p-3">
                    <div class="flex items-center justify-between mb-2">
                      <div class="flex items-center space-x-2">
                        <span class="font-medium text-gray-900"><%= color_items.first.color.humanize %></span>
                      </div>
                      <span class="text-sm font-medium text-gray-600">
                        <%= color_items.sum(&:quantity) %> pieces
                      </span>
                    </div>
                  </div>
                <% end %>
                  <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
                  <% item_group.group_by(&:size).each do |_, size_items| %>
                    <% size_items.each do |item| %>
                      <div class="bg-white rounded px-3 py-2 text-center">
                        <div class="text-xs font-medium text-gray-700"><%= item.size %></div>
                        <div class="text-sm font-semibold text-gray-900"><%= item.quantity %></div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-8">
      <!-- Order Summary -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Order Summary</h3>
        <div class="space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Order ID</span>
            <span class="text-sm font-medium text-gray-900">#<%= @order.id.to_s.rjust(6, '0') %></span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Total Items</span>
            <span class="text-sm font-medium text-gray-900"><%= @order.total_quantity || 0 %></span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Products</span>
            <span class="text-sm font-medium text-gray-900"><%= @order.order_items.count %></span>
          </div>
          
          <hr class="my-3">
          <!--
          <div class="flex justify-between items-center">
            <span class="text-base font-medium text-gray-900">Total Amount</span>
            <span class="text-lg font-bold text-pink-600">
              $<%= number_with_precision(@order.price || 0, precision: 2) %>
            </span>
          </div>
          -->
        </div>
      </div>

      <!-- Delivery Information -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Delivery Information</h3>
        <div class="space-y-3">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Delivery Date</label>
              <p class="text-sm text-gray-900"><%= @order.delivery_date.strftime("%B %d, %Y") %></p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Order Date</label>
            <p class="text-sm text-gray-900"><%= @order.created_at.strftime("%B %d, %Y") %></p>
            <p class="text-xs text-gray-500"><%= @order.created_at.strftime("%I:%M %p") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>